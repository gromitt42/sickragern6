#!/bin/sh
# postinst script for sickragern6
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

case "$1" in
    	configure)
		###
		# Create our Master Share

		###
            	# Create a share with the name of the app

      		app_name=sickragern6
      		partage=`rn_nml -g shares | grep $app_name| awk -F"\" " '{print $1}'|  awk -F"\=\"" '{print $2}'`

		echo $partage

		if [ -z  "${partage}" ]; then
       			rn_nml -a share:/*/$app_name
       			partage=`rn_nml -g shares | grep $app_name | awk -F"\"" '{print $2}'`
       			#chown guest:guest /$Partage/ -R
      		else
       			echo "share exist"
       			partage=`rn_nml -g shares | grep $app_name | awk -F"\"" '{print $2}'`
      		fi

    		if [ -z "${partage}" ]; then
      			echo "empty partage"
      			exit 1
     		else
      			chmod 770 /${partage}
    		fi

		if [ ! -d /apps/sickragern6/web/config ]; then
			mkdir -p /apps/sickragern6/web/config
		fi

		chown -R admin:admin /apps/sickragern6/web/config/.

		if [ ! -f /apps/sickragern6/web/config/config.ini ]; then
	    		echo "create config.ini from config.ini.dist"
	    		cp /apps/sickragern6/defaults/config.ini.dist /apps/sickragern6/web/config/config.ini
		fi

		if [ ! -f /apps/sickragern6/web/autoProcessTV/autoProcessTV.cfg ]; then
	    		echo "create autoProcessTV.cfg from sample"
	    		cp /apps/sickragern6/defaults/autoProcessTV.cfg.sample /apps/sickragern6/web/autoProcessTV/autoProcessTV.cfg
			chmod 777 /apps/sickragern6/web/autoProcessTV/autoProcessTV.cfg
		fi

		if [ ! -f /apps/sickragern6/web/config/sickbeard.db ]; then
            		echo "create sickbeard.db"
	    		touch /apps/sickragern6/web/config/sickbeard.db
	    		chmod 666 /apps/sickragern6/web/config/sickbeard.db
	    		chown admin:admin /apps/sickragern6/web/config/sickbeard.db
		fi

		if [ ! -f /apps/sickragern6/web/config/cache.db ]; then
	    		echo "create cache.db"
            		touch /apps/sickragern6/web/config/cache.db
	    		chmod 666 /apps/sickragern6/web/config/cache.db
	    		chown admin:admin /apps/sickragern6/web/config/cache.db
		fi

		if [ ! -f /apps/sickragern6/web/logs/sickrage.log ]; then
			echo "making the log"
			mkdir -p /apps/sickragern6/web/logs
			touch /apps/sickragern6/web/logs/sickrage.log
			chmod 777 /apps/sickragern6/web/logs/sickrage.log
		else
	        	echo "mod permissions on logs"
			chmod 777 /apps/sickragern6/web/logs/sickrage.log
		fi

		mkdir -p /apps/sickragern6/web/config/cache
		mkdir -p /$partage/web/Blackhole
		chown -R admin:admin /apps/sickragern6
		chmod 777 /apps/sickragern6/web/config
	;;

    	abort-upgrade|abort-remove|abort-deconfigure)
    	;;

    	*)
        	echo "postinst called with unknown argument \`$1'" >&2
        	exit 1
    	;;
esac

###
# Restart Apache (required to show logo)
###
echo "restarting Apache2"
if systemctl restart apache2.service; then
  	echo "success"
  	event_push app readynasd '<add-s resource-type="LocalApp" resource-id="LocalApp"><LocalApp appname="sickragern6" success="1"/></add-s>' 0 0
else
  	echo "failure"
  	event_push app readynasd '<add-s resource-type="LocalApp" resource-id="LocalApp"><LocalApp appname="sickragern6" success="0"/></add-s>' 0 0
fi

sleep 3

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

# Automatically added by dh_makeshlibs
if [ "$1" = "configure" ]; then
	ldconfig
fi
# End automatically added section

exit 0
